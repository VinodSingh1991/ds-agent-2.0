{
  "pattern_id": "birthday_celebration",
  "pattern_name": "Birthday/Celebration Card Pattern",
  "description": "Special celebratory card for birthdays, anniversaries, or special events. Features festive styling and personalization.",
  "use_cases": [
    "employee birthdays",
    "work anniversaries",
    "milestone celebrations",
    "special events",
    "recognition cards",
    "team celebrations"
  ],
  "components": {
    "container": "Card",
    "primary_component": "BirthdayCard",
    "supporting_components": ["Avatar", "Heading", "Text", "Button"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["name", "event_type"],
    "recommended_fields": ["name", "event_type", "date", "message", "avatar_url"],
    "data_shape": "object",
    "ideal_record_count": "1",
    "data_types": {
      "name": "string",
      "event_type": "birthday|anniversary|milestone",
      "date": "date"
    }
  },
  "schema_structure": {
    "type": "BirthdayCard",
    "props": {
      "name": "{{name}}",
      "event": "{{event_type}}",
      "date": "{{date}}"
    },
    "children": [
      {"type": "Avatar", "binds_to": "avatar_url", "optional": true},
      {"type": "Heading", "binds_to": "name", "level": 2},
      {"type": "Text", "binds_to": "message", "optional": true}
    ]
  },
  "complexity": "low",
  "best_for": ["celebrations", "special_events", "recognition", "personal_touch"],
  "avoid_when": ["business_data", "formal_views", "data_heavy"]
}

