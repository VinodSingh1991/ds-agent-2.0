{
  "pattern_id": "empty_state",
  "pattern_name": "Empty State Pattern",
  "description": "Placeholder view when no data is available. Provides guidance and actions for users to take when facing empty content.",
  "use_cases": [
    "no results found",
    "empty list view",
    "first-time user",
    "no data available",
    "zero state",
    "onboarding prompt"
  ],
  "components": {
    "container": "Card",
    "primary_components": ["Heading", "Text", "Button"],
    "supporting_components": ["Image"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": [],
    "recommended_fields": ["message", "action_text", "image_url"],
    "data_shape": "object|null",
    "ideal_record_count": "0",
    "data_types": {
      "message": "string",
      "action_text": "string"
    }
  },
  "schema_structure": {
    "type": "Card",
    "props": {"variant": "outlined", "padding": "xlarge", "align": "center"},
    "children": [
      {"type": "Image", "value": {"src": "empty_state.svg"}, "optional": true},
      {"type": "Heading", "value": {"text": "No data available"}, "level": 3},
      {"type": "Text", "value": {"text": "Get started by adding your first item"}},
      {"type": "Button", "value": {"text": "Add New"}}
    ]
  },
  "complexity": "low",
  "best_for": ["no_data", "onboarding", "zero_state", "guidance"],
  "avoid_when": ["has_data", "loading_state"]
}

