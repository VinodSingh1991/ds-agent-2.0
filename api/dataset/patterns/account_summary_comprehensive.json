{
  "pattern_id": "account_summary_comprehensive",
  "pattern_name": "Comprehensive Account Summary Pattern",
  "description": "Multi-section comprehensive account overview with personal information, insights, activities, related records, and key metrics. Perfect for 360-degree account view with all critical information organized in sections.",
  "use_cases": [
    "complete account overview",
    "account 360 view",
    "customer summary page",
    "account detail dashboard",
    "comprehensive account profile",
    "account intelligence view",
    "full account context",
    "account relationship view"
  ],
  "crm_queries": [
    "explain this account",
    "give me summary of this account",
    "overview of the account",
    "account summary",
    "show account details",
    "account 360",
    "complete account view",
    "account information",
    "tell me about this account",
    "account overview",
    "summarize account",
    "account profile"
  ],
  "schema_structure": {
    "intent": "view_summary",
    "id": "layout_account_summary_comprehensive",
    "query": "{{query}}",
    "object_type": "account",
    "layout_type": "detail",
    "summary": "{{summary}}",
    "LLm_instructions": "Fill the summary and title fields. summary should contain the overall information about the account.",
    "sections": [
      {
        "id": "header",
        "title": "{{title}}",
        "description": "{{description}}",
        "LLm_instructions": "Fill the title and description fields. title should be a concise and descriptive name for the section. description should provide additional context about the section.",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 8,
            "children": [
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": 12
                },
                "children": [
                  {
                    "type": "Stack",
                    "props": {
                      "direction": "horizontal",
                      "gap": 16,
                      "align": "center",
                      "justify": "space-between"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "vertical",
                          "gap": 12
                        },
                        "children": [
                          {
                            "type": "Heading",
                            "value": "{{account_name}}",
                            "LLm_instructions": "Fill the value field. This should be the name of the account.",
                            "props": {
                              "level": 5
                            }
                          },
                          {
                            "type": "Stack",
                            "props": {
                              "direction": "horizontal",
                              "gap": 8,
                              "align": "center"
                            },
                            "children": [
                              {
                                "type": "Badge",
                                "value": "{{status}}",
                                "LLm_instructions": "Fill the value field. This should be the status of the account.",
                                "props": {
                                  "variant": "solid",
                                  "color": "success"
                                }
                              },
                              {
                                "type": "Text",
                                "value": "{{account_id}}",
                                "props": {
                                  "color": "#6b7280"
                                }
                              }
                            ]
                          },
                          {
                            "type": "HtmlText",
                            "value": "{{description}} ",
                            "LLm_instructions": "Fill the value field. This should be the description of the account.",
                            "props": {}
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "personal_info",
        "title": "{{title}}",
        "description": "{{description}}",
        "LLm_instructions": "Fill the title and description fields. title should be a concise and descriptive name for the section. description should provide additional context about the section.",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 16,
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Detail",
                "props": {
                  "orientation": "horizontal",
                  "spacing": 0,
                  "columns": 2
                },
                "children": [
                  {
                    "type": "DetailItem",
                    "LLm_instructions": "Fill the label and value fields. label should be the label for the detail item. value should be the value for the detail item. children should be list or repeated structure if there are multiple values for the same label.",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "{{label}}",
                        "LLm_instructions": "Fill the value field. This should be the label for the industry detail item."

                      },
                      {
                        "type": "DetailValue",
                        "value": "{{industry}}",
                        "LLm_instructions": "Fill the value field. This should be the value for the industry detail item."
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "insights",
        "title": "{{title}}",
        "description": "{{description}}",
        "LLm_instructions": "Fill the title and description fields. title should be a concise and descriptive name for the section. description should provide additional context about the section. This is specially design to view Insight data, if you find any insight, fill it",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 16,
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "UnorderedList",
                "props": {
                  "variant": "plain",
                  "spacing": 8
                },
                "children": [
                  {
                    "type": "UnorderedListItem",
                    "repeat": "insights",
                    "binds_to": "insights"
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Stack",
                "props": {
                  "direction": "vertical",
                  "gap": 24
                },
                "children": [
                  {
                    "type": "Stack",
                    "repeat": "recent_activities",
                    "props": {
                      "direction": "horizontal",
                      "gap": 12,
                      "align": "flex-start"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "vertical",
                          "gap": 4
                        },
                        "children": [
                          {
                            "type": "Strong",
                            "value": "{{description}}"
                          },
                          {
                            "type": "Text",
                            "binds_to": "date",
                            "props": {
                              "color": "#6b7280"
                            }
                          }
                        ]
                      },
                      {
                        "type": "Badge",
                        "binds_to": "type",
                        "props": {
                          "variant": "soft"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "binds_to": "open_opportunities",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": [
                    {
                      "key": "name",
                      "header": "Opportunity Name"
                    },
                    {
                      "key": "stage",
                      "header": "Stage"
                    },
                    {
                      "key": "amount",
                      "header": "Amount"
                    },
                    {
                      "key": "close_date",
                      "header": "Close Date"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "llm_instructions": "Fill the columns field. This should be the columns for the table. Make sure to include name, title, status and score as columns.",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": "{{columns}}",
                  "data": "{{data}}"
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "llm_instructions": "Fill the columns field. This should be the columns for the table. Make sure to include case_number, subject, status and priority as columns.",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": "{{columns}}",
                  "data": "{{data}}"
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",  
                "props": {
                  "level": 5
                }
              },
              {
                "type": "UnorderedList",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "variant": "divided",
                  "spacing": 8
                },
                "children": [
                  {
                    "type": "UnorderedListItem",
                    "repeat": "related_accounts",
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "horizontal",
                          "justify": "space-between"
                        },
                        "children": [
                          {
                            "type": "Text",
                            "value": "{{name}}",
                            "LLm_instructions": "Fill the value field. This should be the name of the related account.",
                            "props": {
                              "weight": 500
                            }
                          },
                          {
                            "type": "Chip",
                            "value": "{{status}}",
                            "LLm_instructions": "Fill the value field. This should be the status of the related account.",
                            "props": {
                              "size": "sm",
                              "variant": "soft",
                              "color": "success"
                            }
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "{{title}}",
                "LLm_instructions": "Fill the value field. This should be the title for the section.",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Stack",
                "props": {
                  "direction": "horizontal",
                  "gap": 16,
                  "wrap": true
                },
                "children": [
                  {
                    "type": "Summary",
                    "repeat": "key_contacts",
                    "props": {
                      "variant": "colorful",
                      "color": "blue",
                      "width": "280px"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "horizontal",
                          "gap": 12,
                          "align": "center"
                        },
                        "children": [
                          {
                            "type": "Avatar",
                            "binds_to": "avatar_url",
                            "props": {
                              "size": "lg"
                            }
                          },
                          {
                            "type": "Stack",
                            "props": {
                              "direction": "vertical",
                              "gap": 4
                            },
                            "children": [
                              {
                                "type": "Title",
                                "value": "{{name}}",
                                "LLm_instructions": "Fill the value field. This should be the name of the key contact."
                              },
                              {
                                "type": "Text",
                                "value": "{{title}}",
                                "LLm_instructions": "Fill the value field. This should be the title of the key contact."
                              },
                              {
                                "type": "Text",
                                "value": "{{email}}",
                                "LLm_instructions": "Fill the value field. This should be the email of the key contact.",
                                "props": {
                                  "size": 12
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "complexity": "high",
  "best_for": [
    "comprehensive_view",
    "account_summary",
    "360_view",
    "multi_section_detail",
    "executive_overview"
  ],
  "avoid_when": [
    "simple_lists",
    "quick_scan",
    "mobile_view",
    "minimal_data"
  ],
  "best_for_layout": "detail"
}