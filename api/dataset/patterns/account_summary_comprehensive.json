{
  "pattern_id": "account_summary_comprehensive",
  "pattern_name": "Comprehensive Account Summary Pattern",
  "description": "Multi-section comprehensive account overview with personal information, insights, activities, related records, and key metrics. Perfect for 360-degree account view with all critical information organized in sections.",
  "use_cases": [
    "complete account overview",
    "account 360 view",
    "customer summary page",
    "account detail dashboard",
    "comprehensive account profile",
    "account intelligence view",
    "full account context",
    "account relationship view"
  ],
  "crm_queries": [
    "explain this account",
    "give me summary of this account",
    "overview of the account",
    "account summary",
    "show account details",
    "account 360",
    "complete account view",
    "account information",
    "tell me about this account",
    "account overview",
    "summarize account",
    "account profile"
  ],
  "schema_structure": {
    "intent": "view_summary",
    "id": "layout_account_summary_comprehensive",
    "query": "{{query}}",
    "object_type": "account",
    "layout_type": "detail",
    "summary": "Comprehensive account overview with personal information, insights, activities, related records, and key metrics",
    "sections": [
      {
        "id": "header",
        "title": "{{Account Overview}}",
        "description": "Key account information and status",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 8,
            "children": [
              {
                "type": "Card",
                "props": {
                  "variant": "outlined",
                  "padding": 12
                },
                "children": [
                  {
                    "type": "Stack",
                    "props": {
                      "direction": "horizontal",
                      "gap": 16,
                      "align": "center",
                      "justify": "space-between"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "vertical",
                          "gap": 12
                        },
                        "children": [
                          {
                            "type": "Heading",
                            "binds_to": "account_name",
                            "props": {
                              "level": 5
                            }
                          },
                          {
                            "type": "Stack",
                            "props": {
                              "direction": "horizontal",
                              "gap": 8,
                              "align": "center"
                            },
                            "children": [
                              {
                                "type": "Badge",
                                "binds_to": "status",
                                "props": {
                                  "variant": "solid",
                                  "color": "success"
                                }
                              },
                              {
                                "type": "Text",
                                "binds_to": "account_id",
                                "props": {
                                  "color": "#6b7280"
                                }
                              }
                            ]
                          },
                          {
                            "type": "HtmlText",
                            "binds_to": "description",
                            "props": {}
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "personal_info",
        "title": "Personal Information",
        "description": "Account details and contact information",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 16,
            "children": [
              {
                "type": "Heading",
                "value": "Personal Information",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Detail",
                "props": {
                  "orientation": "horizontal",
                  "spacing": 0,
                  "columns": 2
                },
                "children": [
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Industry"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "industry"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Annual Revenue"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "annual_revenue"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Employees"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "employees"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Account Owner"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "account_owner"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Website"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "website"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Phone"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "phone"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Email"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "email"
                      }
                    ]
                  },
                  {
                    "type": "DetailItem",
                    "children": [
                      {
                        "type": "DetailLabel",
                        "value": "Address"
                      },
                      {
                        "type": "DetailValue",
                        "binds_to": "address"
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      },
      {
        "id": "insights",
        "title": "Key Insights",
        "description": "Important insights about this account",
        "rows": [
          {
            "type": "Stack",
            "direction": "vertical",
            "gap": 16,
            "children": [
              {
                "type": "Heading",
                "value": "Key Insights",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "UnorderedList",
                "props": {
                  "variant": "plain",
                  "spacing": 8
                },
                "children": [
                  {
                    "type": "UnorderedListItem",
                    "repeat": "insights",
                    "binds_to": "insights"
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Recent Activities",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Stack",
                "props": {
                  "direction": "vertical",
                  "gap": 24
                },
                "children": [
                  {
                    "type": "Stack",
                    "repeat": "recent_activities",
                    "props": {
                      "direction": "horizontal",
                      "gap": 12,
                      "align": "flex-start"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "vertical",
                          "gap": 4
                        },
                        "children": [
                          {
                            "type": "Strong",
                            "binds_to": "description"
                          },
                          {
                            "type": "Text",
                            "binds_to": "date",
                            "props": {
                              "color": "#6b7280"
                            }
                          }
                        ]
                      },
                      {
                        "type": "Badge",
                        "binds_to": "type",
                        "props": {
                          "variant": "soft"
                        }
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Open Opportunities",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "binds_to": "open_opportunities",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": [
                    {
                      "key": "name",
                      "header": "Opportunity Name"
                    },
                    {
                      "key": "stage",
                      "header": "Stage"
                    },
                    {
                      "key": "amount",
                      "header": "Amount"
                    },
                    {
                      "key": "close_date",
                      "header": "Close Date"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Related Leads",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "binds_to": "related_leads",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": [
                    {
                      "key": "name",
                      "header": "Lead Name"
                    },
                    {
                      "key": "title",
                      "header": "Title"
                    },
                    {
                      "key": "status",
                      "header": "Status"
                    },
                    {
                      "key": "score",
                      "header": "Score"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Related Cases",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Table",
                "binds_to": "related_cases",
                "props": {
                  "variant": "bordered",
                  "size": "md",
                  "columns": [
                    {
                      "key": "case_number",
                      "header": "Case #"
                    },
                    {
                      "key": "subject",
                      "header": "Subject"
                    },
                    {
                      "key": "status",
                      "header": "Status"
                    },
                    {
                      "key": "priority",
                      "header": "Priority"
                    }
                  ]
                }
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Products & Services",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "UnorderedList",
                "props": {
                  "variant": "divided",
                  "spacing": 8
                },
                "children": [
                  {
                    "type": "UnorderedListItem",
                    "repeat": "products",
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "horizontal",
                          "justify": "space-between"
                        },
                        "children": [
                          {
                            "type": "Text",
                            "binds_to": "name",
                            "props": {
                              "weight": 500
                            }
                          },
                          {
                            "type": "Chip",
                            "binds_to": "status",
                            "props": {
                              "size": "sm",
                              "variant": "soft",
                              "color": "success"
                            }
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "type": "Divider"
          },
          {
            "type": "Stack",
            "props": {
              "direction": "vertical",
              "gap": 16
            },
            "children": [
              {
                "type": "Heading",
                "value": "Key Contacts",
                "props": {
                  "level": 5
                }
              },
              {
                "type": "Stack",
                "props": {
                  "direction": "horizontal",
                  "gap": 16,
                  "wrap": true
                },
                "children": [
                  {
                    "type": "Summary",
                    "repeat": "key_contacts",
                    "props": {
                      "variant": "colorful",
                      "color": "blue",
                      "width": "280px"
                    },
                    "children": [
                      {
                        "type": "Stack",
                        "props": {
                          "direction": "horizontal",
                          "gap": 12,
                          "align": "center"
                        },
                        "children": [
                          {
                            "type": "Avatar",
                            "binds_to": "avatar_url",
                            "props": {
                              "size": "lg"
                            }
                          },
                          {
                            "type": "Stack",
                            "props": {
                              "direction": "vertical",
                              "gap": 4
                            },
                            "children": [
                              {
                                "type": "Title",
                                "binds_to": "name"
                              },
                              {
                                "type": "Text",
                                "binds_to": "title"
                              },
                              {
                                "type": "Text",
                                "binds_to": "email",
                                "props": {
                                  "size": 12
                                }
                              }
                            ]
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  },
  "complexity": "high",
  "best_for": [
    "comprehensive_view",
    "account_summary",
    "360_view",
    "multi_section_detail",
    "executive_overview"
  ],
  "avoid_when": [
    "simple_lists",
    "quick_scan",
    "mobile_view",
    "minimal_data"
  ],
  "best_for_layout": "detail"
}