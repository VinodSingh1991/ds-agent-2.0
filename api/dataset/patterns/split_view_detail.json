{
  "pattern_id": "split_view_detail",
  "pattern_name": "Split View Master-Detail Pattern",
  "description": "Two-column layout with master list on left and detail view on right. Common in email clients, file browsers, and record navigation.",
  "use_cases": [
    "leads list with detail preview",
    "email inbox layout",
    "opportunities with preview",
    "contacts list with details",
    "cases with detail view",
    "accounts with preview pane",
    "tasks with detail sidebar",
    "deals with quick view",
    "tickets with preview"
  ],
  "crm_queries": [
    "split view",
    "master detail",
    "list with preview",
    "inbox layout",
    "preview pane",
    "detail sidebar"
  ],
  "components": {
    "container": "Stack",
    "left_panel": "Stack",
    "right_panel": "Card",
    "primary_components": ["ListCard", "Heading", "Text"],
    "supporting_components": ["Badge", "Button", "Avatar", "Divider"],
    "layout_direction": "horizontal"
  },
  "data_requirements": {
    "min_fields": ["items"],
    "recommended_fields": ["items", "selected_item_details"],
    "data_shape": "object",
    "ideal_record_count": "varies",
    "data_types": {
      "items": "array",
      "selected_item": "object"
    }
  },
  "schema_structure": {
    "type": "Stack",
    "props": {"direction": "horizontal", "gap": "medium"},
    "children": [
      {
        "type": "Stack",
        "props": {"direction": "vertical", "width": "30%"},
        "children": [
          {
            "type": "ListCard",
            "repeat": "items",
            "binds_to": "items"
          }
        ]
      },
      {
        "type": "Card",
        "props": {"variant": "outlined", "width": "70%"},
        "children": [
          {"type": "Heading", "binds_to": "selected_item.title"},
          {"type": "Text", "binds_to": "selected_item.content"}
        ]
      }
    ]
  },
  "complexity": "high",
  "best_for": ["navigation", "master_detail", "browsing", "email_style"],
  "avoid_when": ["mobile_view", "simple_lists", "single_focus"]
}

