{
  "pattern_id": "profile_card_list",
  "pattern_name": "Profile Card List Pattern",
  "description": "Display a list or grid of profile cards with detailed user/contact information. Each card shows avatar, name, role, contact details, and status. Perfect for team directories, contact lists, and user management.",
  "use_cases": [
    "team member directory",
    "contact management",
    "user directory",
    "sales team roster",
    "customer profiles",
    "lead profiles",
    "employee directory"
  ],
  "components": {
    "container": "Grid",
    "item_wrapper": "ProfileCard",
    "required_components": ["Avatar", "Heading", "Text"],
    "optional_components": ["Badge", "Button", "Icon"],
    "layout_direction": "horizontal-wrap"
  },
  "data_requirements": {
    "min_fields": ["name"],
    "recommended_fields": ["name", "avatar_url", "role", "email", "phone", "status"],
    "data_shape": "array",
    "ideal_record_count": "3-50",
    "data_types": {
      "name": "string",
      "avatar_url": "url|null",
      "role": "string",
      "email": "email",
      "phone": "string",
      "status": "enum"
    }
  },
  "schema_structure": {
    "type": "Grid",
    "props": {"columns": 3, "gap": "large"},
    "children": [
      {
        "type": "ProfileCard",
        "repeat": "data",
        "props": {"variant": "detailed"},
        "children": [
          {"type": "Avatar", "binds_to": "avatar_url", "props": {"size": "large"}},
          {"type": "Heading", "binds_to": "name", "props": {"level": 3}},
          {"type": "Text", "binds_to": "role", "props": {"variant": "secondary"}},
          {"type": "Divider"},
          {"type": "Text", "binds_to": "email", "optional": true},
          {"type": "Text", "binds_to": "phone", "optional": true},
          {"type": "Badge", "binds_to": "status", "optional": true}
        ]
      }
    ]
  },
  "complexity": "medium",
  "best_for": ["team_directories", "contact_management", "user_profiles", "people_lists"],
  "avoid_when": ["data_heavy_tables", "metrics_focus", "simple_lists"]
}

