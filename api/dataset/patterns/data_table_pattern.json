{
  "pattern_id": "data_table_pattern",
  "pattern_name": "Data Table Pattern",
  "description": "Structured table layout for comparing multiple records with similar attributes. Ideal for data-heavy views where users need to scan, sort, and compare values across rows.",
  "use_cases": [
    "leads table with status and score",
    "opportunities pipeline table",
    "accounts list with revenue",
    "deals comparison table",
    "activity history table",
    "sales forecast table",
    "contact list with details",
    "task list with priorities",
    "quote comparison table",
    "campaign performance table"
  ],
  "crm_queries": [
    "show leads table",
    "display opportunities",
    "list all accounts",
    "show deals pipeline",
    "activity history",
    "sales forecast",
    "contact table",
    "task list",
    "compare quotes",
    "campaign results table"
  ],
  "components": {
    "container": "Card",
    "primary_component": "Table",
    "supporting_components": ["Heading", "Badge", "Button", "Metric"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["id"],
    "recommended_fields": ["name", "status", "value", "date"],
    "data_shape": "array",
    "ideal_record_count": "5-1000",
    "data_types": {
      "id": "string|number",
      "name": "string",
      "status": "enum",
      "value": "number|currency",
      "date": "date"
    }
  },
  "schema_structure": {
    "type": "Card",
    "props": {"variant": "outlined", "padding": "medium"},
    "children": [
      {"type": "Heading", "value": {"text": "{{title}}"}, "level": 2},
      {
        "type": "Table",
        "props": {
          "columns": "{{columns}}",
          "sortable": true,
          "filterable": true,
          "paginated": true
        },
        "binds_to": "data"
      }
    ]
  },
  "complexity": "medium",
  "best_for": ["data_comparison", "many_attributes", "sorting_filtering", "large_datasets"],
  "avoid_when": ["single_record", "image_heavy", "hierarchical_data", "less_than_3_records"]
}

