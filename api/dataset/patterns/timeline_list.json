{
  "pattern_id": "timeline_list",
  "pattern_name": "Timeline/Activity List Pattern",
  "description": "Chronological list of activities or events with timestamps. Perfect for activity feeds, history logs, and timeline views.",
  "use_cases": [
    "lead activity history",
    "deal timeline",
    "contact interaction log",
    "opportunity change log",
    "email communication history",
    "call log timeline",
    "task completion history",
    "case update timeline",
    "audit trail",
    "status change history"
  ],
  "crm_queries": [
    "show activity history",
    "timeline",
    "interaction log",
    "change history",
    "communication log",
    "call history",
    "task history",
    "audit trail",
    "status changes"
  ],
  "components": {
    "container": "Stack",
    "item_wrapper": "Card",
    "primary_components": ["Text", "Label"],
    "supporting_components": ["Badge", "Avatar", "Divider", "Link"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["event", "timestamp"],
    "recommended_fields": ["event", "timestamp", "user", "description"],
    "data_shape": "array",
    "ideal_record_count": "5-100",
    "data_types": {
      "event": "string",
      "timestamp": "datetime",
      "user": "string",
      "description": "string"
    }
  },
  "schema_structure": {
    "type": "Stack",
    "props": {"direction": "vertical", "gap": "small"},
    "children": [
      {
        "type": "Stack",
        "repeat": "events",
        "props": {"direction": "vertical", "gap": "xsmall"},
        "children": [
          {"type": "Label", "binds_to": "timestamp"},
          {"type": "Text", "binds_to": "event"},
          {"type": "Text", "binds_to": "description", "optional": true},
          {"type": "Divider", "optional": true}
        ]
      }
    ]
  },
  "complexity": "medium",
  "best_for": ["chronological_data", "history", "activity_feeds", "logs"],
  "avoid_when": ["non_temporal", "comparison", "metrics"]
}

