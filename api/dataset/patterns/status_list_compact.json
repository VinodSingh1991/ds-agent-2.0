{
  "pattern_id": "status_list_compact",
  "pattern_name": "Status List Compact Pattern",
  "description": "Compact list view with status indicators and key information. Optimized for quick scanning of records with visual status cues.",
  "use_cases": [
    "task list with priorities",
    "lead status overview",
    "opportunity stages list",
    "activity feed",
    "follow-up tasks",
    "recent activities",
    "deal pipeline stages",
    "case status list",
    "email status tracking",
    "call log with outcomes"
  ],
  "crm_queries": [
    "show tasks",
    "task list",
    "lead status",
    "opportunity stages",
    "activity feed",
    "follow-ups",
    "recent activities",
    "deal stages",
    "case status",
    "call log"
  ],
  "components": {
    "container": "Stack",
    "item_wrapper": "Card",
    "primary_components": ["Badge", "Text", "Heading"],
    "supporting_components": ["Button", "Link", "Label"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["title", "status"],
    "recommended_fields": ["title", "status", "description", "timestamp"],
    "data_shape": "array",
    "ideal_record_count": "3-20",
    "data_types": {
      "title": "string",
      "status": "enum",
      "description": "string",
      "timestamp": "date"
    }
  },
  "schema_structure": {
    "type": "Stack",
    "props": {"direction": "vertical", "gap": "small"},
    "children": [
      {
        "type": "Card",
        "repeat": "data",
        "props": {"variant": "outlined", "padding": "small"},
        "children": [
          {"type": "Badge", "binds_to": "status"},
          {"type": "Heading", "binds_to": "title", "level": 4},
          {"type": "Text", "binds_to": "description", "optional": true}
        ]
      }
    ]
  },
  "complexity": "low",
  "best_for": ["status_tracking", "compact_lists", "quick_scan", "notifications"],
  "avoid_when": ["detailed_data", "many_fields", "comparison_needed"]
}

