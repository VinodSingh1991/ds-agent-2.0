{
  "pattern_id": "alert_notification",
  "pattern_name": "Alert/Notification Pattern",
  "description": "Display important messages, alerts, warnings, or success notifications to users. Supports different severity levels with appropriate visual styling.",
  "use_cases": [
    "lead assignment notification",
    "deal won/lost alerts",
    "task deadline warnings",
    "quota achievement success",
    "duplicate record warnings",
    "email sync errors",
    "pipeline stage change alerts",
    "follow-up reminders",
    "SLA breach warnings",
    "approval request notifications"
  ],
  "crm_queries": [
    "show notification",
    "display alert",
    "show warning message",
    "success message",
    "error notification",
    "show deal won alert",
    "task reminder",
    "quota alert"
  ],
  "components": {
    "container": "Alert",
    "primary_components": ["Heading", "Text"],
    "supporting_components": ["Button", "Link"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["message"],
    "recommended_fields": ["message", "severity", "title", "action"],
    "data_shape": "object",
    "ideal_record_count": "1",
    "data_types": {
      "message": "string",
      "severity": "success|warning|error|info",
      "title": "string"
    }
  },
  "schema_structure": {
    "type": "Alert",
    "props": {"severity": "{{severity}}"},
    "children": [
      {"type": "Heading", "binds_to": "title", "level": 4, "optional": true},
      {"type": "Text", "binds_to": "message"},
      {"type": "Button", "value": {"text": "{{action_label}}"}, "optional": true}
    ]
  },
  "complexity": "low",
  "best_for": ["notifications", "alerts", "messages", "feedback"],
  "avoid_when": ["data_display", "lists", "forms"]
}

