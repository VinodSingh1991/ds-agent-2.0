{
  "pattern_id": "dashboard_grid",
  "pattern_name": "Dashboard Grid Pattern",
  "description": "Flexible dashboard layout with Grid component supporting multiple Dashlets and charts. Perfect for KPI dashboards with 4-3-3-chart layouts or any custom grid configuration.",
  "use_cases": [
    "sales performance dashboard",
    "executive CRM dashboard",
    "pipeline metrics overview",
    "revenue KPI dashboard",
    "team quota tracking",
    "monthly sales summary",
    "lead conversion dashboard",
    "opportunity win rate dashboard",
    "activity metrics dashboard",
    "forecast vs actual dashboard"
  ],
  "crm_queries": [
    "show sales dashboard",
    "display KPIs",
    "executive dashboard",
    "pipeline metrics",
    "revenue dashboard",
    "team performance",
    "quota tracking",
    "conversion metrics",
    "win rate dashboard",
    "forecast dashboard"
  ],
  "components": {
    "container": "Stack",
    "layout_component": "Grid",
    "primary_components": ["Dashlet", "PieChart", "BarChart", "LineChart"],
    "supporting_components": ["HeadingWithDescription", "Divider", "Card"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["metrics"],
    "recommended_fields": ["metrics", "charts", "trends"],
    "data_shape": "object",
    "ideal_record_count": "1",
    "data_types": {
      "metrics": "array_of_objects",
      "charts": "array_of_objects",
      "trends": "array_of_objects"
    }
  },
  "schema_structure": {
    "type": "Stack",
    "props": {"direction": "vertical", "gap": "large"},
    "children": [
      {
        "type": "HeadingWithDescription",
        "props": {
          "heading": "{{dashboard_title}}",
          "description": "{{dashboard_description}}",
          "level": 1
        }
      },
      {
        "type": "Grid",
        "props": {"columns": 4, "gap": "medium"},
        "children": [
          {
            "type": "Dashlet",
            "repeat": "row1_metrics",
            "binds_to": "value",
            "props": {
              "label": "{{label}}",
              "icon": "{{icon}}",
              "trend": "{{trend}}",
              "change": "{{change}}",
              "format": "{{format}}",
              "color": "{{color}}"
            }
          }
        ]
      },
      {
        "type": "Grid",
        "props": {"columns": 3, "gap": "medium"},
        "children": [
          {
            "type": "Dashlet",
            "repeat": "row2_metrics",
            "binds_to": "value",
            "props": {
              "label": "{{label}}",
              "icon": "{{icon}}",
              "format": "{{format}}",
              "color": "{{color}}"
            }
          }
        ]
      },
      {
        "type": "Grid",
        "props": {"columns": 3, "gap": "medium"},
        "children": [
          {
            "type": "Dashlet",
            "repeat": "row3_metrics",
            "binds_to": "value",
            "props": {
              "label": "{{label}}",
              "icon": "{{icon}}",
              "format": "{{format}}",
              "color": "{{color}}"
            }
          }
        ]
      },
      {
        "type": "Grid",
        "props": {"columns": 2, "gap": "medium"},
        "children": [
          {
            "type": "Card",
            "props": {"variant": "elevated"},
            "children": [
              {"type": "Heading", "value": "{{chart1_title}}", "props": {"level": 3}},
              {
                "type": "PieChart",
                "binds_to": "chart1_data",
                "props": {
                  "variant": "donut",
                  "show_legend": true,
                  "size": "medium"
                }
              }
            ]
          },
          {
            "type": "Card",
            "props": {"variant": "elevated"},
            "children": [
              {"type": "Heading", "value": "{{chart2_title}}", "props": {"level": 3}},
              {
                "type": "LineChart",
                "binds_to": "chart2_data",
                "props": {
                  "show_grid": true,
                  "smooth": true,
                  "color": "primary"
                }
              }
            ]
          }
        ]
      }
    ]
  },
  "complexity": "high",
  "best_for": ["dashboards", "kpi_tracking", "executive_summaries", "analytics", "performance_monitoring"],
  "avoid_when": ["simple_lists", "detail_views", "forms", "single_metric"]
}

