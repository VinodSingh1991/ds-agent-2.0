{
  "pattern_id": "callout_notification",
  "pattern_name": "Callout Notification Pattern",
  "description": "Display important messages, notifications, tips, or alerts using Callout components. Supports multiple variants (info, success, warning, error, tip, note) with icons and dismissible options.",
  "use_cases": [
    "important notices",
    "system notifications",
    "tips and hints",
    "warnings and errors",
    "feature highlights",
    "onboarding messages",
    "status updates",
    "promotional messages"
  ],
  "components": {
    "container": "Stack",
    "primary_component": "Callout",
    "supporting_components": ["Text", "Button", "Icon"],
    "layout_direction": "vertical"
  },
  "data_requirements": {
    "min_fields": ["message"],
    "recommended_fields": ["message", "variant", "title", "icon", "dismissible"],
    "data_shape": "object|array",
    "ideal_record_count": "1-5",
    "data_types": {
      "message": "string",
      "variant": "info|success|warning|error|tip|note",
      "title": "string",
      "icon": "string",
      "dismissible": "boolean"
    }
  },
  "schema_structure": {
    "type": "Stack",
    "props": {"direction": "vertical", "gap": "medium"},
    "children": [
      {
        "type": "Callout",
        "repeat": "notifications",
        "props": {
          "variant": "{{variant}}",
          "title": "{{title}}",
          "icon": "{{icon}}",
          "dismissible": "{{dismissible}}"
        },
        "children": [
          {"type": "Text", "binds_to": "message"}
        ]
      }
    ]
  },
  "complexity": "low",
  "best_for": ["notifications", "alerts", "messages", "tips", "warnings", "announcements"],
  "avoid_when": ["data_display", "lists", "forms", "dashboards"]
}

